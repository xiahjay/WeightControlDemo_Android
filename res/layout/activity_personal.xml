<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@drawable/aaa" >

    <!-- ******************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"        
        android:background="@drawable/diary_single_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClickInformation" >

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/img_patient" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="matrix"
            android:src="@drawable/diary_arrow" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/setting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="嵇雨萌"
                android:textColor="#000"
                android:textSize="17sp" />
         </LinearLayout>

    </RelativeLayout>

    <!-- *********************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:background="@drawable/diary_first_item"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv0"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="基本信息"
            android:textColor="@color/pink"
            android:textSize="17sp" />
    </RelativeLayout>
    <!-- *********************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout2"
        android:background="@drawable/diary_item"
        android:gravity="center_vertical"
        android:onClick="onClickAge" >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="年龄"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/setting_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@id/tv1"
            android:gravity="right"
            android:padding="8dp"
            android:hint="请输入"
            android:textColor="@color/pink"
            android:textSize="17sp" />

        <ImageView
            android:id="@id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="matrix"
            android:src="@drawable/diary_arrow" />
    </RelativeLayout>

    <!-- *********************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout3"
        android:background="@drawable/diary_item"
        android:gravity="center_vertical"
        android:onClick="onClickHeight" >

        <TextView
            android:id="@+id/tv2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="身高"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/setting_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@id/tv2"
            android:gravity="right"
            android:padding="8dp"
            android:hint="请输入"
            android:textColor="@color/pink"
            android:textSize="17sp" />

        <ImageView
            android:id="@id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="matrix"
            android:src="@drawable/diary_arrow" />
    </RelativeLayout>

    <!-- *********************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout4"
        android:background="@drawable/diary_item"
        android:gravity="center_vertical"
        android:onClick="onClickRealWeight" >

        <TextView
            android:id="@+id/tv3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="实际体重"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/setting_real_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@id/tv3"
            android:gravity="right"
            android:padding="8dp"
            android:hint="请输入"
            android:textColor="@color/pink"
            android:textSize="17sp" />

        <ImageView
            android:id="@id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="matrix"
            android:src="@drawable/diary_arrow" />
    </RelativeLayout>

    <!-- *********************************************************************** -->

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout5"
        android:background="@drawable/diary_last_item"
        android:gravity="center_vertical"
        android:onClick="onClickIdealWeight" >

        <TextView
            android:id="@+id/tv4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:text="理想体重"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/setting_ideal_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toLeftOf="@+id/arrow"
            android:layout_toRightOf="@id/tv4"
            android:gravity="right"
            android:padding="8dp"
            android:hint="请输入"
            android:textColor="@color/pink"
            android:textSize="17sp" />

        <ImageView
            android:id="@id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="matrix"
            android:src="@drawable/diary_arrow" />
    </RelativeLayout>

</RelativeLayout>